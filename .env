# Server Configuration
NODE_ENV=development
PORT=8080
CORS_ORIGIN=*

# Database Configuration
DB_HOST=localhost
DB_PORT=54322
DB_NAME=fashionista_dev
DB_USER=postgres
DB_PASSWORD=postgres

# Supabase Configuration
SUPABASE_URL=http://localhost:54321
SUPABASE_KEY=dummy-key-for-development

# Security
JWT_SECRET=local-development-secret
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Logging & Monitoring
LOG_LEVEL=debug
LOG_FORMAT=dev
ENABLE_QUERY_LOGGING=true
PERFORMANCE_THRESHOLD=1000
ERROR_NOTIFICATION_THRESHOLD=5

# Cache Configuration
CACHE_TTL=3600
CACHE_CHECK_PERIOD=120

# Feature Flags
ENABLE_RLS=true
CREATE_INDEXES=true
APPLY_CONSTRAINTS=true
CREATE_TRIGGERS=true

# Change Management
ENABLE_CHANGE_TRACKING=true
CHANGE_LOG_RETENTION_DAYS=90
VERIFICATION_TIMEOUT_MS=5000
MAX_ROLLBACK_ATTEMPTS=3
SCHEMA_CHANGE_NOTIFICATION=true

# Cloudinary Configuration
VITE_CLOUDINARY_CLOUD_NAME=dzqy2ixl0
VITE_CLOUDINARY_API_KEY=your_api_key
VITE_CLOUDINARY_API_SECRET=your_api_secret

# API Configuration
API_URL=http://localhost:3000